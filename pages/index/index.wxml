<!--index.wxml-->
<view class="container">
  <view class='left_lives'>体力值：{{livesCount}}</view>
  <view class='title'>头脑风暴战</view>
  <view class='index_bg'>
    <image src='../../images/index_bg.png'></image>
  </view>
  <view class='choose_view'>
    <picker-view indicator-style="height: 50px;" style="width: 100%; height: 50px;" value="{{value}}" >
      <picker-view-column>
        <view wx:for="{{questionType}}" class='choose_type'  wx:key='this'>{{item}}</view>
      </picker-view-column>
       <picker-view-column>
        <view wx:for="{{level}}" class='choose_type'  wx:key='this'>{{item}}</view>
      </picker-view-column>
    </picker-view>
  </view> 
  <view class='begin_answer' bindtap='begin'>开始游戏</view>
</view>
