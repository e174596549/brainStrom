page{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
  padding: 0;
  display: flex;
  flex-direction: column; 
  flex-wrap: nowrap;
  justify-content: flex-start;
  background-image: url(' http://oofhxj2ur.bkt.clouddn.com/2.jpg');
  background-position: center;
  background-origin: content-box;
  background-size: cover;
  background-repeat: no-repeat; 
}
.question_wrap{
  width: 100%;
  height: 900rpx;
}
.question{
  margin-top: 60rpx;
  margin-left: 40rpx;
  width: 90%;
  height: 200rpx;
  background: #000;
  border-radius: 8rpx;
  font-size: 32rpx;
  background-color: rgba(255, 255, 255, 0.5);
}
.title{
  height: 100rpx;
}
.placeholder{
  font-size: 30rpx;
}
.result_list{
  margin-top: 60rpx;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  display: flex;
  padding-left: 10rpx;
}
.result_a{
  width: 136rpx;
  margin-top: 20rpx;
  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 8rpx;
  margin-right: 10rpx;
  margin-left: 5rpx;
}
.question_setting{
  margin-top: 30rpx;
  padding-left: 60rpx;
  display: flex;
  width: 100%;
  height: 100rpx;
}
.right_result{
  font-size: 32rpx;
  margin: 10rpx 8rpx;
}
.picker{
  margin-left: 20rpx;
  width: 120rpx; 
  height: 50px; 
  line-height: 50rpx;
  text-align: center;
  vertical-align: middle;
}
.right_label{
  margin-left: 30rpx;
}
.button_wrap{
  margin-top: 80rpx;
  padding-right: 20rpx;
  display: flex;
  flex-direction: row-reverse;
}
.submit_button{
  width: 160rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  vertical-align: middle;
  margin: 10rpx;
}
button::after{
  border:none;
}
.button_click{
  background-color: rgba(255,140,0,0.5)
}