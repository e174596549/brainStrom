page{
  width: 100%;
  height: 100%;
}
image{
  width: 100%;
  height: 100%;
}
.container{
  position: relative;
  width: 100%;
  height: 100%;
  padding: 0;
  display: flex;
  flex-direction: column; 
  flex-wrap: nowrap;
  justify-content: flex-start;
  background-image: url('http://oofhxj2ur.bkt.clouddn.com/53b5b57880067.jpg');
  background-position: center;
  background-origin: content-box;
  background-size: cover;
  background-repeat: no-repeat; 
} 
.title{
  position: absolute;
  left: -10rpx;
  top: 0rpx;
  margin-top: 20rpx;
  width: 130rpx;
  height: 130rpx;
  transform:rotate(30deg);
}
.list_wrap{
  margin-top: 80rpx;
  padding-left: 80rpx;
  width: 100%;
  height: 900rpx;
  display: flex;
  flex-direction: column;
}
.user_item{
  width: 90%;
  height: 90rpx;
  display: flex;
  align-items: center;
  background-color: rgba(255,255,255,0.5);
  margin-bottom: 10rpx;
  border-radius: 6rpx;
}
.user_num{
  margin-left: 50rpx;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  vertical-align: middle;
  text-align: center;
  border-radius: 50%;
  background-color: rgba(	255,140,0,0.5)
}
.user_cover{
  margin-left: 60rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.cover{
  border-radius: 50%;
}
.user_name{
  margin-left: 20rpx;
  width: 280rpx;
  text-align: center;
  overflow:hidden; 
  text-overflow:ellipsis;
  white-space:nowrap;
}
.user_score{
  margin-left: 30rpx;
  color: #DC143C;
  font-size: 45rpx;
  font-weight: bold;
}
.num{
  margin-left: 20rpx;
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  vertical-align: middle;
}
.user_name_title{
  margin-left: 60rpx;
}
.score{
  margin-left: 70rpx;
}
.tip{
  margin-top: 30rpx;
  margin-left: 250rpx;
  font-size: 30rpx;
  display: flex;
  align-items: baseline;
}
.this_score{
  margin: 0 10rpx;
  width: 60rpx;
  font-size: 40rpx;
  color: #DC143C;
}